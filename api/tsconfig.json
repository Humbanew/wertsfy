{

  "compilerOptions": {

    "module": "CommonJS",
    "moduleDetection": "auto",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "strict": false,
    "alwaysStrict": false,
    "isolatedModules": false,
    "rootDirs": ["./"],
    
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "extendedDiagnostics": true,

    // Diretório de export
    "outDir": "./exports/@1.1.0/",

  },
  // Arquivos que não devem ser exportados
  "exclude": ["./exports/", "./imports/", "./srcs/", "./cli/"]

}
