{

  "compilerOptions": {

    "module": "CommonJS",
    "moduleDetection": "auto",
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "strict": false,
    "alwaysStrict": false,
    "isolatedModules": false,
    "rootDirs": ["./", "../"],
    
    // Javascript Builded Files 
    "outDir": "./javascript",

    // Javascript Declaration Builded Files
    "declarationDir": "./javascript/dist/",
    
    "declaration": true,
    
    "declarationMap": true,
    
    "sourceMap": true,
    
  }

}
