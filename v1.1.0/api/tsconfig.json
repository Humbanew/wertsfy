{

  "compilerOptions": {

    "module": "NodeNext",
    "moduleDetection": "auto",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "strict": false,
    "alwaysStrict": false,
    "isolatedModules": false,
    "rootDirs": ["./"],
    
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "extendedDiagnostics": true,

    // Diretório de export
    "outDir": "./out/@1.1.0/",
    "declarationDir": "./out/@1.1.0/ts/",

  },
  // Arquivos que não devem ser exportados
  "exclude": ["./exports/", "./imports/", "./srcs/", "./cli/", "./data/"]

}
