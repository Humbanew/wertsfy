{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "alwaysStrict": false,
    "strict": false,
    "noImplicitUseStrict": true,
    "declarationDir": "./dist-def/appdev/",
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist/app/",
  },
  "buildOptions": {
    "incremental": true,
    "traceResolution": false,
    "verbose": false
  },
  "exclude": [
    "/oldSrc/*",
    "/integration/*",
    "/application/kex/*",
    "/application/nikko/*",
    "/application/preview/*"
  ]
}
