{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "alwaysStrict": true,
    "declarationDir": "./dist-def/",
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist"
  },
  "buildOptions": {
    "incremental": true,
    "traceResolution": false,
    "verbose": false
  }
}
